<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="@color/colorPrimaryDark"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity"

    >


    <TextView
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:maxHeight="100sp"
        android:textColor="@color/specialFnct"
        android:textSize="45sp"
        android:typeface="normal"
        app:fontFamily="serif"
        android:hint="0"/>

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:maxHeight="80sp"
        android:textColor="@color/specialFnct"
        android:textSize="36sp"


        android:typeface="normal"
        app:fontFamily="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="@string/square"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <Button
            android:id="@+id/sqrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="@string/button_sqrt"
            android:textSize="30sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/AC"
            android:layout_width="156sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="#d53a17"
            android:minHeight="50dp"
            android:text="AC"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:visibility="visible" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/pi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="@string/button_pi"
            android:textAllCaps="false"
            android:textSize="30sp" />

        <Button
            android:id="@+id/percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="@string/button_percentage"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="@string/button_del"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:minHeight="50dp"
            android:text="@string/button_division"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/but_seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="7"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/but_eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="8"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/but_nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="9"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/multiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:minHeight="50dp"
            android:text="@string/button_mult"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/but_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="4"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/but_five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"


            android:text="5"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/but_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="6"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/subtraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:minHeight="50dp"
            android:text="-"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/but_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="1"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/but_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="2"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/but_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="50dp"
            android:text="3"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="1"
            android:background="@color/colorButtons"
            android:minHeight="50dp"
            android:text="+"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/but_zero"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="88dp"
            android:layout_marginRight="88dp"
            android:minHeight="50dp"
            android:text="0"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/dot"
            app:layout_constraintEnd_toStartOf="@+id/answer"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/dot"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="88dp"
            android:layout_marginLeft="89dp"
            android:layout_marginRight="88dp"
            android:layout_marginStart="89dp"
            android:minHeight="50dp"
            android:text="."
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/answer"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="@+id/but_zero"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/answer"
            android:layout_width="89dp"
            android:layout_height="52dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:background="@android:color/holo_orange_light"
            android:minHeight="50dp"
            android:text="@string/answer"

            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/equals"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/but_zero"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/equals"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@color/colorButtons"
            android:minHeight="50dp"
            android:text="@string/button_equal"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/answer"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


</LinearLayout>